@model List<Models.Organization>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="POST">
    

    <div class="form-horizontal align-content-center">
        <table id="OrganizationViewTable" class="table table-striped table-bordered " style="width: 100%">
            <thead>
                <tr>
                    <th class="th-">
                        SL

                    </th>
                    <th class="th-lg">
                        Name
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-lg">
                        Code
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th">
                        Trainers
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th">
                        Participants
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th">
                        Action

                    </th>

                </tr>
            </thead>
            <tbody id="OrganizationViewTableContent">
            @{ int i = 1;}
            @foreach (var organization in Model)
            {
                <tr>
                    <td> @i @{ i++;}</td>
                    <td>@organization.Name</td>
                    <td> @organization.Code</td>
                    <td> @organization.Trainers.Count</td>
                    <td> @organization.Students.Count</td>
                    <td> <a href="#">Edit</a>|<a href="#">Delete</a></td>
                </tr>
            }

            </tbody>
        </table>

    </div>





  
</form>
@section scripts{
    @*<script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/AppData/Organization/OrganizationEntry.js"></script>

}
