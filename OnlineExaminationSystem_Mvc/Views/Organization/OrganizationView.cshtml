@model Models.Organization

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <form method="POST">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <img src="~/Organization/RetrieveImage/@Model.Id" alt="" height=200 width=200/>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="form-group">
                                <h1 class="page-header col-md-8"> @Model.Name</h1>
                                <div class="col-md-">
                                    <div class="form-group" style="margin-top: 30px">
                                        <a href="@Url.Action("OrganizationSearch", "Organization")" class="elements"> <span class="glyphicon glyphicon-chevron-left">Search</span></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h3> @Model.About</h3>
                            </div>
                        </div>
                        
                     </div>
                        
                   
                </div>
            </div>
            

            <div class="form-horizontal align-content-center">
                <table id="OrganizationViewTable" class="table table-striped table-bordered " style="width: 100%">
                    <thead>
                        <tr>
                            <th class="th-">
                                SL

                            </th>
                            <th class="th-lg">
                                Name
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th-lg">
                               Code
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th">
                                Trainers
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th">
                                Participants
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th">
                                Action
                                
                            </th>

                        </tr>
                    </thead>
                    <tbody id="OrganizationViewTableContent"></tbody>
                </table>

            </div>





            <div class="card-footer">

               

                <div class="row">
                    <h4> @Model.Address</h4>
                </div>
                <div class="row">
                    <h4> @Model.ContactNo</h4>
                </div>

            </div>
        </form>
@section scripts{
